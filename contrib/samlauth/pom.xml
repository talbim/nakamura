<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sakaiproject.nakamura</groupId>
    <artifactId>base</artifactId>
    <version>1.1-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <artifactId>org.sakaiproject.nakamura.auth.saml</artifactId>
  <packaging>bundle</packaging>
  <name>Sakai Nakamura :: SAML Authentication Bundle</name>
  <description>Provides SAML based authentication support to the request cycle.</description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Category>sakai-nakamura</Bundle-Category>
            <Private-Package>org.sakaiproject.nakamura.auth.saml</Private-Package>
            <Import-Package>
              !sun.io.*,
              !org.apache.commons.ssl,
              !org.apache.xml.dtm,
              !org.apache.xml.resolver.*,
              !org.apache.xml.utils,
              !org.apache.xpath.*,
              !org.bouncycastle.*,
              *
            </Import-Package>
            <Embed-Dependency>
              opensaml,
              openws,
              xmltooling,
              joda-time,
              xercesImpl,
              xmlsec
            </Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>openSAML</id>
      <name>OpenSAML Repo</name>
      <url>http://shibboleth.internet2.edu/downloads/maven2</url>
    </repository>
  </repositories>
